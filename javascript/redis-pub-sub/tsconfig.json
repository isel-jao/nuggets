{
  "compilerOptions": {
    "strict": false,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["es2022"],
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
